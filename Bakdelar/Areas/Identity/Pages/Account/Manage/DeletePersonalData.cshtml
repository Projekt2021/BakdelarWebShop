@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Ta bort konto";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Om du raderar ditt konto tas all information bort och kan ej återskapas.</strong>
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                </div>
            }
            <button class="btn btn-danger" type="submit">Radera mitt konto</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
