@using Bakdelar.Classes;
@model ShoppingBasketItem

@{
    decimal priceForItems = Model.Price * Model.ItemCount;
}
@if(Model.ItemCount > 0)
{
<div class="flex-row">
    <a href="@Url.Content($"~/SingleProductView/{Model.ID}")">
        <div class="media">
            <img class="mr-3 align-self-center" src="@Model.ImageLink" style="width: 30px; height:30px;" />
            <div class="media-body">
                <h6 class="">
                    @Model.ProductName
                </h6>
            </div>
        </div>
    </a>

    <div class="pl-5">
        @Model.ItemCount x @Model.Price kr
    </div>
</div>
<div class="d-flex w-100">

    <div class="d-flex align-items-end flex-column w-100">
        <div class="pl-2 d-inline-flex w-100 justify-content-end">
            <span class="material-icons text-danger" tabindex="-1" onclick="reduceByOne(@Model.ID)">
                remove
            </span>
            <h6 class="font-weight-bold item-count-id-@Model.ID">@Model.ItemCount</h6>
            <span class="material-icons text-success" tabindex="-1" onclick="increaseByOne(@Model.ID)">
                add
            </span>
        </div>
        <div class="d-flex w-100 h-75 justify-content-end">
            <span onclick="openPopover_Dropdown(@Model.ID);" class="material-icons text-danger button-remove-item-dropdown mt-auto" data-trigger="focus" tabindex="-1" data-toggle="popover-remove-item-dropdown-@Model.ID">not_interested</span>
        </div>
    </div>
</div>
}