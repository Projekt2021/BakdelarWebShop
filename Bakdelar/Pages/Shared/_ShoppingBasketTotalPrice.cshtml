@using Bakdelar.Classes;
@model List<ShoppingBasketItem>
@{
    decimal totalPrice = Model.Sum(item => item.Price * item.ItemCount);
    decimal shippingFee = MethodClasses.StaticValues.ShippingFee;
}

@{
    if (totalPrice < 300)
    {
        @Html.Raw($"Varor totalt: {totalPrice} kr<br />Frakt: {shippingFee} kr<br />Totalt: {totalPrice + shippingFee} kr" +
    $"<br /><br />{300 - totalPrice} kr kvar till fri frakt");
    }
    else
    {

        @Html.Raw($"Varor totalt: {totalPrice} kr<br />Frakt: 0 kr<br />Totalt: {totalPrice} kr");
    }
}
