@model List<ShoppingBasketItem>
@{
    var shoppingBasket = Model;
    if (shoppingBasket == null || !shoppingBasket.Any())
    {
        int zero = 0;
        @zero
    }
    else
    {
        int sum = shoppingBasket.Sum(item => item.ItemCount);
        @sum
        
        @*@Html.Raw($"{shoppingBasket.Count}");*@
    }
}

